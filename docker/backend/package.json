{
  "name": "aimee-backend",
  "version": "1.0.0",
  "description": "AImee Backend Server",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:all": "./run-all-tests.sh",
    "test:unit": "jest --config=jest.config.unit.js",
    "test:llm": "RUN_LLM_TESTS=true jest --testPathPattern=criticalPaths",
    "test:llm:judge": "RUN_LLM_TESTS=true jest --config=jest.config.llm.js",
    "test:core": "RUN_LLM_TESTS=true jest --config=jest.config.core.js",
    "test:personality": "RUN_LLM_TESTS=true jest --config=jest.config.personality.js"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "livekit-server-sdk": "^2.0.0",
    "openai": "^4.67.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^4.3.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  }
}
